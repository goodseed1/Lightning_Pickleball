// import { sanitizeDataForFirestore, findUndefinedValues } from '../utils/dataUtils';

// ğŸ›¡ï¸ Firebase undefined ê°’ ì œê±° ìœ í‹¸ë¦¬í‹°
function removeUndefinedFields(obj: any): any {
  if (obj === null || obj === undefined) {
    return null;
  }

  if (Array.isArray(obj)) {
    return obj.map(removeUndefinedFields);
  }

  if (typeof obj === 'object') {
    const cleaned: any = {};
    for (const [key, value] of Object.entries(obj)) {
      if (value !== undefined) {
        if (typeof value === 'object' && value !== null && !(value instanceof Date)) {
          // Firestore Timestamp ê°ì²´ëŠ” ê·¸ëŒ€ë¡œ ìœ ì§€
          if (value.constructor.name === 'Timestamp' || value._methodName === 'serverTimestamp') {
            cleaned[key] = value;
          } else {
            cleaned[key] = removeUndefinedFields(value);
          }
        } else {
          cleaned[key] = value;
        }
      }
    }
    return cleaned;
  }

  return obj;
}

class TournamentService {
  /**
   * í† ë„ˆë¨¼íŠ¸ ìƒì„±
   */
  async createTournament(request: CreateTournamentRequest): Promise<string> {
    try {
      const tournamentData: Omit<Tournament, 'id'> = {
        clubId: request.clubId,
        tournamentName: request.tournamentName,
        roundName: request.title,
        description: request.description,
        eventType: request.eventType,
        format: request.format,
        settings: request.settings,

        participants: [],
        bracket: [],

        startDate: Timestamp.fromDate(request.startDate),
        endDate: Timestamp.fromDate(request.endDate),
        registrationDeadline: Timestamp.fromDate(request.registrationDeadline),

        status: 'draft',
        totalRounds: this.calculateTotalRounds(request.settings.maxParticipants),

        createdBy: auth.currentUser?.uid || 'unknown', // Get actual user ID from auth context
        createdAt: serverTimestamp() as Timestamp,
        updatedAt: serverTimestamp() as Timestamp,
      };

      // Only add optional fields if they exist to avoid Firebase undefined field errors
      if (request.drawDate) {
        tournamentData.drawDate = Timestamp.fromDate(request.drawDate);
      }

      if (request.entryFee) {
        tournamentData.entryFee = request.entryFee;
      }

      const docRef = await addDoc(collection(db, 'tournaments'), tournamentData);
      console.log('âœ… Tournament created:', docRef.id);

      return docRef.id;
    } catch (error) {
      console.error('Error creating tournament:', error);
      throw error;
    }
  }

  /**
   * í† ë„ˆë¨¼íŠ¸ ì •ë³´ ì¡°íšŒ
   */
  async getTournament(tournamentId: string): Promise<Tournament | null> {
    try {
      const tournamentDoc = await getDoc(doc(db, 'tournaments', tournamentId));

      if (!tournamentDoc.exists()) {
        return null;
      }

      return {
        id: tournamentDoc.id,
        ...tournamentDoc.data(),
      } as Tournament;
    } catch (error) {
      console.error('Error getting tournament:', error);
      throw error;
    }
  }

  /**
   * í´ëŸ½ì˜ í† ë„ˆë¨¼íŠ¸ ëª©ë¡ ì¡°íšŒ
   */
  async getClubTournaments(clubId: string, status?: TournamentStatus): Promise<Tournament[]> {
    try {
      const tournamentsRef = collection(db, 'tournaments');
      let q = query(tournamentsRef, where('clubId', '==', clubId), orderBy('createdAt', 'desc'));

      if (status) {
        q = query(
          tournamentsRef,
          where('clubId', '==', clubId),
          where('status', '==', status),
          orderBy('createdAt', 'desc')
        );
      }

      const snapshot = await getDocs(q);
      return snapshot.docs.map(doc => ({
        id: doc.id,
        ...doc.data(),
      })) as Tournament[];
    } catch (error) {
      console.error('Error getting club tournaments:', error);
      throw error;
    }
  }

  /**
   * í´ëŸ½ì˜ í† ë„ˆë¨¼íŠ¸ ëª©ë¡ ì‹¤ì‹œê°„ êµ¬ë…
   * Real-time subscription for club tournaments list
   */
  subscribeToClubTournaments(
    clubId: string,
    userRole: string,
    callback: (tournaments: Tournament[]) => void
  ): Unsubscribe {
    const tournamentsRef = collection(db, 'tournaments');

    // Role-based query construction similar to leagues
    let q;
    if (userRole === 'admin' || userRole === 'owner' || userRole === 'manager') {
      // Admin: Can see all tournament statuses (backstage view)
      q = query(tournamentsRef, where('clubId', '==', clubId), orderBy('createdAt', 'desc'));
      console.log(
        'ğŸ† [TOURNAMENT SUBSCRIPTION] Admin backstage view: Loading all tournament statuses'
      );
    } else {
      // Members: See tournaments including preparation phases (draft, registration, in_progress, etc.)
      q = query(
        tournamentsRef,
        where('clubId', '==', clubId),
        where('status', 'in', [
          'draft',
          'registration',
          'in_progress',
          'bracket_generation',
          'completed',
        ]),
        orderBy('createdAt', 'desc')
      );
      console.log(
        'ğŸ† [TOURNAMENT SUBSCRIPTION] Member view: Loading all tournaments including preparation phases'
      );
    }

    return onSnapshot(
      q,
      snapshot => {
        const allTournaments = snapshot.docs.map(doc => ({
          id: doc.id,
          ...doc.data(),
        })) as Tournament[];

        // All tournaments from the Firestore query are available to display
        // Remove client-side filtering to allow members to see tournaments during preparation phases
        const availableTournaments = allTournaments;

        console.log(
          `ğŸ† [TOURNAMENT SUBSCRIPTION] ${userRole} received ${availableTournaments.length} tournaments for club ${clubId}`
        );
        callback(availableTournaments);
      },
      error => {
        console.error('Error in club tournaments subscription:', error);
        callback([]); // Return empty array on error
      }
    );
  }

  /**
   * í† ë„ˆë¨¼íŠ¸ ì°¸ê°€ ì‹ ì²­
   * @param partnerInfo - ë³µì‹ í† ë„ˆë¨¼íŠ¸ìš© íŒŒíŠ¸ë„ˆ ì •ë³´ (ì„ íƒì )
   */
  async registerForTournament(
    tournamentId: string,
    userId: string,
    partnerInfo?: { partnerId: string; partnerName: string }
  ): Promise<string> {
    try {
      // í† ë„ˆë¨¼íŠ¸ ì •ë³´ í™•ì¸
      const tournament = await this.getTournament(tournamentId);
      if (!tournament) {
        throw new Error('Tournament not found');
      }

      // ì°¸ê°€ ê°€ëŠ¥ í™•ì¸
      if (tournament.status !== 'registration') {
        throw new Error('Tournament is not open for registration');
      }

      if (tournament.participants.length >= tournament.settings.maxParticipants) {
        throw new Error('Tournament is full');
      }

      // ì¤‘ë³µ ì‹ ì²­ í™•ì¸
      const existingParticipant = tournament.participants.find(p => p.playerId === userId);
      if (existingParticipant) {
        throw new Error('Already registered');
      }

      // ğŸ¦¾ ë³µì‹ í† ë„ˆë¨¼íŠ¸ íŒŒíŠ¸ë„ˆ ê²€ì¦
      const isDoubles = getMatchFormatFromTournamentEventType(tournament.eventType) === 'doubles';
      if (isDoubles && !partnerInfo) {
        throw new Error('Partner information is required for doubles tournaments');
      }
      if (isDoubles && partnerInfo) {
        // íŒŒíŠ¸ë„ˆ ì¤‘ë³µ ì‹ ì²­ í™•ì¸
        const partnerAlreadyRegistered = tournament.participants.find(
          p => p.playerId === partnerInfo.partnerId
        );
        if (partnerAlreadyRegistered) {
          throw new Error('Partner is already registered for this tournament');
        }

        // ìê¸° ìì‹ ì„ íŒŒíŠ¸ë„ˆë¡œ ì„ íƒí•˜ì§€ ëª»í•˜ë„ë¡ ê²€ì¦
        if (partnerInfo.partnerId === userId) {
          throw new Error('Cannot select yourself as partner');
        }
      }

      // ì‚¬ìš©ì í”„ë¡œí•„ ì •ë³´ ê°€ì ¸ì˜¤ê¸°
      let userProfile;
      try {
        userProfile = await authService.getUserProfile(userId);
      } catch (profileError) {
        console.warn('Could not fetch user profile, using fallback data:', profileError);
        userProfile = null;
      }

      // í˜„ì¬ ì‹œê°„ìœ¼ë¡œ timestamp ìƒì„± (serverTimestampëŠ” ë°°ì—´ ë‚´ì—ì„œ ì‚¬ìš© ë¶ˆê°€)
      const now = new Date();

      // ì°¸ê°€ ì‹ ì²­ ìƒì„±
      const registration: Omit<TournamentRegistration, 'id'> = {
        tournamentId,
        userId,
        status: 'approved', // ìë™ ìŠ¹ì¸ (í•„ìš”ì‹œ 'pending'ìœ¼ë¡œ ë³€ê²½)
        registeredAt: Timestamp.fromDate(now),
        approvedAt: Timestamp.fromDate(now),
      };

      const docRef = await addDoc(collection(db, 'tournamentRegistrations'), registration);

      // ì°¸ê°€ì ì¶”ê°€ (ì‹¤ì œ ì‚¬ìš©ì ë°ì´í„° ì‚¬ìš©)
      const participant: TournamentParticipant = {
        id: `${userId}_${Date.now()}`, // âœ… ê³ ìœ  participant ID
        tournamentId: tournamentId, // âœ… í† ë„ˆë¨¼íŠ¸ ì°¸ì¡°
        playerId: userId,
        playerName: userProfile?.displayName || userProfile?.name || 'Unknown Player',
        playerGender: userProfile?.gender || 'male', // âœ… í•„ìˆ˜ í•„ë“œ ì¶”ê°€
        skillLevel: userProfile?.skillLevel?.toString() || '3.0', // ê¸°ë³¸ê°’ 3.0
        status: 'approved', // âœ… ìë™ ìŠ¹ì¸
        registeredAt: Timestamp.fromDate(now),
        matchesPlayed: 0,
        matchesWon: 0,
        setsWon: 0,
        setsLost: 0,
        gamesWon: 0,
        gamesLost: 0,
      };

      // ğŸ¦¾ Partner data for doubles tournaments (ì¡°ê±´ë¶€ë¡œë§Œ ì¶”ê°€)
      if (partnerInfo?.partnerId) {
        participant.partnerId = partnerInfo.partnerId;
        participant.partnerName = partnerInfo.partnerName;
      }

      // í† ë„ˆë¨¼íŠ¸ ì°¸ê°€ì ëª©ë¡ ì—…ë°ì´íŠ¸
      await updateDoc(doc(db, 'tournaments', tournamentId), {
        participants: [...tournament.participants, participant],
        updatedAt: serverTimestamp(),
      });

      console.log('âœ… Tournament registration completed:', docRef.id);
      return docRef.id;
    } catch (error) {
      console.error('Error registering for tournament:', error);
      throw error;
    }
  }

  /**
   * ğŸ›ï¸ TEAM-FIRST ARCHITECTURE 2.0
   * Register a CONFIRMED TEAM for a doubles tournament
   *
   * This replaces the old unilateral partner selection.
   * Now only mutually-agreed teams (status='confirmed') can register.
   *
   * @param tournamentId - Tournament to register for
   * @param teamId - ID of the confirmed team
   * @param registeredBy - userId who triggered the registration (either team member)
   */
  async registerTeamForTournament(
    tournamentId: string,
    teamId: string,
    registeredBy: string
  ): Promise<string> {
    try {
      console.log('ğŸ›ï¸ [TEAM-FIRST 2.0] Registering team for tournament:', {
        tournamentId,
        teamId,
        registeredBy,
      });

      // Validation 1: Get tournament
      const tournament = await this.getTournament(tournamentId);
      if (!tournament) {
        throw new Error('Tournament not found');
      }

      // Validation 2: Check tournament status
      if (tournament.status !== 'registration') {
        throw new Error('Tournament is not open for registration');
      }

      // Validation 3: Check capacity
      const isDoubles = getMatchFormatFromTournamentEventType(tournament.eventType) === 'doubles';
      if (!isDoubles) {
        throw new Error('Team registration is only allowed for doubles tournaments');
      }

      // For doubles, count teams, not individual participants
      const existingTeams = tournament.participants.filter(p => p.partnerId);
      const teamCount = Math.floor(existingTeams.length / 2); // Each team = 2 participants
      const maxTeams = Math.floor(tournament.settings.maxParticipants / 2);

      if (teamCount >= maxTeams) {
        throw new Error('Tournament is full');
      }

      // Validation 4: Get team and verify it's confirmed
      const teamService = (await import('./teamService')).default;
      const team = await teamService.getTeam(teamId);

      if (!team) {
        throw new Error('Team not found');
      }

      if (team.status !== 'confirmed') {
        throw new Error(
          'Team must be confirmed before registration. Current status: ' + team.status
        );
      }

      if (team.tournamentId !== tournamentId) {
        throw new Error('Team is for a different tournament');
      }

      // Validation 5: Check if registeredBy is actually in the team
      if (team.player1.userId !== registeredBy && team.player2.userId !== registeredBy) {
        throw new Error('Only team members can register the team');
      }

      // Validation 6: Check if team is already registered
      const alreadyRegistered = tournament.participants.some(
        p =>
          (p.playerId === team.player1.userId && p.partnerId === team.player2.userId) ||
          (p.playerId === team.player2.userId && p.partnerId === team.player1.userId)
      );

      if (alreadyRegistered) {
        throw new Error('Team is already registered for this tournament');
      }

      // Create timestamp
      const now = new Date();
      const registeredAt = Timestamp.fromDate(now);

      // Create participant entries for BOTH team members
      const participant1: TournamentParticipant = {
        playerId: team.player1.userId,
        playerName: team.player1.playerName,
        skillLevel: team.player1.skillLevel || '3.0',
        registeredAt,
        matchesPlayed: 0,
        matchesWon: 0,
        setsWon: 0,
        setsLost: 0,
        gamesWon: 0,
        gamesLost: 0,
        // ğŸ›ï¸ Team-based partner data
        partnerId: team.player2.userId,
        partnerName: team.player2.playerName,
        teamId: teamId, // Reference to confirmed team
      };

      const participant2: TournamentParticipant = {
        playerId: team.player2.userId,
        playerName: team.player2.playerName,
        skillLevel: team.player2.skillLevel || '3.0',
        registeredAt,
        matchesPlayed: 0,
        matchesWon: 0,
        setsWon: 0,
        setsLost: 0,
        gamesWon: 0,
        gamesLost: 0,
        // ğŸ›ï¸ Team-based partner data
        partnerId: team.player1.userId,
        partnerName: team.player1.playerName,
        teamId: teamId, // Reference to confirmed team
      };

      // Create registration record
      const registration: Omit<TournamentRegistration, 'id'> = {
        tournamentId,
        userId: registeredBy,
        status: 'approved',
        registeredAt,
        approvedAt: registeredAt,
        teamId: teamId, // NEW: Link to team
      };

      const docRef = await addDoc(collection(db, 'tournamentRegistrations'), registration);

      // ğŸ•µï¸ BLACK BOX: Fuel Inspection Report - Diagnostic Logging
      console.log('\nğŸ” â›½ === FUEL INSPECTION REPORT ===');
      console.log('ğŸ“¦ Participant 1 (Player 1):', JSON.stringify(participant1, null, 2));
      console.log('ğŸ“¦ Participant 2 (Player 2):', JSON.stringify(participant2, null, 2));
      console.log('ğŸ”— Partner ID Verification:', {
        participant1_partnerId: participant1.partnerId,
        participant2_partnerId: participant2.partnerId,
        expected_p1_partnerId: team.player2.userId,
        expected_p2_partnerId: team.player1.userId,
        bidirectional_link_valid:
          participant1.partnerId === team.player2.userId &&
          participant2.partnerId === team.player1.userId
            ? 'âœ… VALID - Fuel line intact'
            : 'âŒ BROKEN - Fuel line compromised',
      });
      console.log('â›½ === END FUEL INSPECTION ===\n');

      // Update tournament with BOTH participants
      await updateDoc(doc(db, 'tournaments', tournamentId), {
        participants: [...tournament.participants, participant1, participant2],
        updatedAt: serverTimestamp(),
      });

      console.log('âœ… [TEAM-FIRST 2.0] Team registration completed:', {
        registrationId: docRef.id,
        teamId,
        teamName: `${team.player1.playerName} / ${team.player2.playerName}`,
      });

      return docRef.id;
    } catch (error) {
      console.error('âŒ [TEAM-FIRST 2.0] Error registering team:', error);
      throw error;
    }
  }

  /**
   * ì‹œë“œ ë°°ì •
   */
  async assignSeeds(
    tournamentId: string,
    seeds: Array<{ playerId: string; seed: number }>
  ): Promise<void> {
    try {
      const tournament = await this.getTournament(tournamentId);
      if (!tournament) {
        throw new Error('Tournament not found');
      }

      // ì°¸ê°€ìì— ì‹œë“œ ì ìš©
      const updatedParticipants = tournament.participants.map(p => {
        const seedInfo = seeds.find(s => s.playerId === p.playerId);
        if (seedInfo) {
          return { ...p, seed: seedInfo.seed };
        }
        return p;
      });

      await updateDoc(doc(db, 'tournaments', tournamentId), {
        participants: updatedParticipants,
        updatedAt: serverTimestamp(),
      });

      console.log('âœ… Seeds assigned');
    } catch (error) {
      console.error('Error assigning seeds:', error);
      throw error;
    }
  }

  /**
   * ğŸ¾ Iron Man: Team-First Architecture
   * ë³µì‹ í† ë„ˆë¨¼íŠ¸ ì°¸ê°€ìë“¤ì„ íŒ€ ë‹¨ìœ„ë¡œ ê·¸ë£¹í™”
   *
   * @param participants í† ë„ˆë¨¼íŠ¸ ì°¸ê°€ì ë°°ì—´
   * @returns DoublesTeam ë°°ì—´ (3íŒ€ â†’ 3ê°œ ê°ì²´)
   *
   * Example:
   * - Input: 6ëª… ì°¸ê°€ì (Won, ëˆ„ë‚˜, ì² ì´, íŒŒíŠ¸ë„ˆA, ì„ ìˆ˜B, ì„ ìˆ˜C)
   * - Output: 3íŒ€ ([Won/ëˆ„ë‚˜], [ì² ì´/íŒŒíŠ¸ë„ˆA], [ì„ ìˆ˜B/ì„ ìˆ˜C])
   */
  groupParticipantsIntoTeams(participants: TournamentParticipant[]): DoublesTeam[] {
    const teams: DoublesTeam[] = [];
    const processedPlayerIds = new Set<string>();

    console.log('ğŸ¾ [TEAM ARCHITECT] Grouping participants into teams:');
    console.log(`  ğŸ“Š Total participants: ${participants.length}`);

    // ğŸ›¡ï¸ ê° ì°¸ê°€ìì˜ íŒŒíŠ¸ë„ˆ ì •ë³´ ê²€ì¦
    console.log('  ğŸ›¡ï¸ [VALIDATION] Checking partner information for all participants:');
    participants.forEach((participant, index) => {
      console.log(`  [${index}] ${participant.playerName}:`, {
        playerId: participant.playerId,
        partnerId: participant.partnerId || 'null âŒ',
        partnerName: participant.partnerName || 'null âŒ',
        hasPartner: !!participant.partnerId,
      });
    });

    participants.forEach(participant => {
      // ì´ë¯¸ ì²˜ë¦¬ëœ ì„ ìˆ˜ëŠ” ìŠ¤í‚µ (íŒŒíŠ¸ë„ˆë¡œ ì¶”ê°€ë¨)
      if (processedPlayerIds.has(participant.playerId)) {
        console.log(`  â­ï¸ Skipping ${participant.playerName} (already added as partner)`);
        return;
      }

      if (participant.partnerId) {
        // íŒŒíŠ¸ë„ˆ ì°¾ê¸°
        const partner = participants.find(p => p.playerId === participant.partnerId);

        if (!partner) {
          console.error(
            `  âŒ [ERROR] Partner not found for ${participant.playerName} (partnerId: ${participant.partnerId})`
          );
          console.error(
            `    Available player IDs: ${participants.map(p => p.playerId).join(', ')}`
          );
          return;
        }

        // íŒ€ ìƒì„±
        const team: DoublesTeam = {
          teamId: `${participant.playerId}_${participant.partnerId}`,
          player1: participant,
          player2: partner,
          seed: participant.seed, // ë‘ ì„ ìˆ˜ ëª¨ë‘ ê°™ì€ ì‹œë“œë¥¼ ê°€ì ¸ì•¼ í•¨
          teamName: `${participant.playerName} / ${partner.playerName}`,
        };

        teams.push(team);
        processedPlayerIds.add(participant.playerId);
        processedPlayerIds.add(participant.partnerId);

        console.log(`  âœ… Team created: ${team.teamName} (Seed: ${team.seed || 'N/A'})`);
      } else {
        console.warn(`  âš ï¸ ${participant.playerName} has no partner - cannot form team`);
      }
    });

    console.log(`ğŸ¾ [TEAM ARCHITECT] Total teams created: ${teams.length}`);

    // ğŸš¨ ìµœì¢… ê²€ì¦: íŒ€ ìƒì„± ì‹¤íŒ¨ ê²½ê³ 
    if (participants.length > 0 && teams.length === 0) {
      console.error('âŒ [CRITICAL ERROR] No teams created despite having participants!');
      console.error('  Possible causes:');
      console.error('  1. Missing partnerId fields in participant data');
      console.error('  2. Partner participants not found in array (partnerId mismatch)');
      console.error('  3. Data structure mismatch between participants');
      console.error('  â†’ Check Firebase data and registration flow!');
    }

    return teams;
  }

  /**
   * ì‹±ê¸€ ì—˜ë¦¬ë¯¸ë„¤ì´ì…˜ ëŒ€ì§„í‘œ ìƒì„±
   * ğŸ¦¾âš¡ Team-First Architecture: ë³µì‹ì€ íŒ€ ê¸°ë°˜, ë‹¨ì‹ì€ ì„ ìˆ˜ ê¸°ë°˜
   */
  async generateSingleEliminationBracket(tournamentId: string): Promise<void> {
    try {
      const tournament = await this.getTournament(tournamentId);
      if (!tournament) {
        throw new Error('Tournament not found');
      }

      const participants = [...tournament.participants];
      const totalParticipants = participants.length;

      console.log('ğŸ¾ Starting bracket generation:', {
        tournamentId,
        totalParticipants,
        eventType: tournament.eventType,
        participantNames: participants.map(p => p.playerName),
      });

      if (totalParticipants < 2) {
        throw new Error('At least 2 participants required for tournament');
      }

      // ğŸ¯ Thor: ë³µì‹/ë‹¨ì‹ êµ¬ë¶„
      const isDoubles = getMatchFormatFromTournamentEventType(tournament.eventType) === 'doubles';

      if (isDoubles) {
        console.log('âš¡ [THOR] Detected DOUBLES tournament - using Team-First Architecture');

        // ğŸ¦¾ íŒ€ ë‹¨ìœ„ë¡œ ê·¸ë£¹í™”
        const teams = this.groupParticipantsIntoTeams(participants);
        console.log(
          `âš¡ [THOR] Grouped ${participants.length} participants into ${teams.length} teams`
        );

        // íŒ€ ì‹œë“œ ê¸°ì¤€ìœ¼ë¡œ ì •ë ¬
        teams.sort((a, b) => (a.seed || 999) - (b.seed || 999));

        console.log(
          'âš¡ [THOR] Teams after seeding:',
          teams.map(t => ({
            teamName: t.teamName,
            seed: t.seed,
          }))
        );

        // ğŸ† íŒ€ ê¸°ë°˜ ëŒ€ì§„í‘œ ìƒì„± (3íŒ€ â†’ Bracket Size 4)
        const teamCount = teams.length;
        const { bracket, matches } = this.generateTeamBasedBracket(tournamentId, teams, teamCount);

        console.log('âš¡ [THOR] Generated team-based bracket:', {
          totalRounds: bracket.length,
          totalMatches: matches.length,
          teamCount,
        });

        // Firebaseì— ì €ì¥
        await this.saveBracketToFirebase(tournamentId, bracket, matches);

        console.log(`âœ… [THOR] Generated ${matches.length} matches for ${teamCount} teams`);
      } else {
        console.log('ğŸ¾ [SINGLES] Using standard player-based bracket generation');

        // ì‹œë“œ ìˆœìœ¼ë¡œ ì •ë ¬ (ì‹œë“œê°€ ë‚®ì„ìˆ˜ë¡ ë†’ì€ ì‹œë“œ)
        participants.sort((a, b) => (a.seed || 999) - (b.seed || 999));

        console.log(
          'ğŸ¾ Participants after seeding:',
          participants.map(p => ({
            name: p.playerName,
            seed: p.seed,
          }))
        );

        // ğŸ¯ Operation: Perfect Bracket - í‘œì¤€ í† ë„ˆë¨¼íŠ¸ BYE ë°°ë¶„ ì•Œê³ ë¦¬ì¦˜
        const { bracket, matches } = this.generatePerfectBracket(tournamentId, participants);

        console.log('ğŸ¾ Generated bracket structure:', {
          totalRounds: bracket.length,
          totalMatches: matches.length,
          roundBreakdown: bracket.map(r => ({
            round: r.roundNumber,
            matches: r.matches.length,
          })),
        });

        // Firebaseì— ì €ì¥
        await this.saveBracketToFirebase(tournamentId, bracket, matches);

        console.log(`âœ… Generated ${matches.length} matches in ${bracket.length} rounds`);
      }
    } catch (error) {
      console.error('Error generating bracket:', error);
      throw error;
    }
  }

  /**
   * ê²½ê¸° ê²°ê³¼ ì…ë ¥
   */
  async updateMatchResult(matchId: string, _winner: string, score: TournamentScore): Promise<void> {
    try {
      // Extract tournament ID from match ID (format: tournamentId_match_number)
      const tournamentId = matchId.split('_match_')[0];

      // ê²½ê¸° ì •ë³´ ì¡°íšŒ (nested subcollectionì—ì„œ ì¡°íšŒ)
      const matchDoc = await getDoc(doc(db, 'tournaments', tournamentId, 'matches', matchId));
      if (!matchDoc.exists()) {
        throw new Error('Match not found');
      }

      const match = matchDoc.data() as BracketMatch;

      // ğŸ” [BROKEN WIRE FIX] Client-side tracing for Firestore update
      const docPath = `tournaments/${tournamentId}/matches/${matchId}`;
      const updateData = {
        status: 'completed',
        winner: _winner, // ğŸ”§ FIXED: _winner â†’ winner (matching Cloud Function expectation)
        score,
        updatedAt: serverTimestamp(),
      };

      console.log('--- ğŸ“¤ CLIENT-SIDE FIRESTORE UPDATE ---');
      console.log(`Document Path: ${docPath}`);
      console.log(
        'Update Data:',
        JSON.stringify(
          {
            status: updateData.status,
            winner: _winner,
            score: score,
            timestamp: new Date().toISOString(),
          },
          null,
          2
        )
      );

      // ê²½ê¸° ê²°ê³¼ ì—…ë°ì´íŠ¸ (nested subcollectionì—ì„œ ì—…ë°ì´íŠ¸)
      await updateDoc(doc(db, 'tournaments', tournamentId, 'matches', matchId), updateData);

      // ğŸ’¥ CLIENT ADVANCEMENT LOGIC REMOVED ğŸ’¥
      // All tournament progression is now handled by onMatchResultUpdated Cloud Function
      // Client responsibility is LIMITED to recording match results only

      // í† ë„ˆë¨¼íŠ¸ í†µê³„ ì—…ë°ì´íŠ¸
      await this.updateTournamentStats(match.tournamentId, match, _winner);

      console.log('âœ… Match result updated:', matchId);
    } catch (error) {
      console.error('Error updating match result:', error);
      throw error;
    }
  }

  /**
   * ğŸ’€ CLIENT-SIDE ADVANCEMENT LOGIC REMOVED ğŸ’€
   * This method has been deprecated as part of "Brain Transplant" surgery.
   * All tournament progression is now handled by onMatchResultUpdated Cloud Function.
   *
   * IMPORTANT: Do not restore this logic - it was the source of tournament bracket conflicts!
