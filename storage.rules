rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Profile images - users can upload their own
    match /profiles/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Club images - club admins can upload
    match /clubs/{clubId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Payment proofs - authenticated users can upload to their own folder
    match /payment_proofs/{clubId}/{userId}/{allPaths=**} {
      // Anyone authenticated can read (for admin review)
      allow read: if request.auth != null;
      // Users can only upload to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Event images
    match /events/{eventId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Chat images (legacy path)
    match /chat/{chatId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // ðŸ“· Chat images - organized by chat type (direct/club/event)
    // Limits enforced by client: direct=30, club=50, event=30
    match /chat_images/{chatType}/{chatId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // General uploads folder
    match /uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Pickleball services images - users can upload to their own folder
    match /pickleball_services/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
