{
  "name": "lightning-pickleball-simple",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:services": "jest src/services/",
    "test:services:elo": "jest src/services/__tests__/eloRatingService.test.ts",
    "test:services:ranking": "jest src/services/__tests__/rankingService.test.ts",
    "test:screens": "jest src/screens/",
    "test:screens:clubs": "jest src/screens/clubs/",
    "quality-check": "npx tsc --noEmit && npm run lint",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-pattern 'functions/temp_disabled/**' --ignore-pattern 'functions/lib/**' --ignore-pattern '.storybook/**' --ignore-pattern 'legacy-backup/**' --ignore-pattern '**/*.jsx'",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --ignore-pattern 'functions/temp_disabled/**' --ignore-pattern 'functions/lib/**' --ignore-pattern '.storybook/**' --ignore-pattern 'legacy-backup/**' --ignore-pattern '**/*.jsx'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "code-quality": "npm run lint && npm run format:check",
    "structure-check": "npx @ls-lint/ls-lint",
    "dep-check": "depcheck",
    "circular-check": "madge --circular --extensions ts,tsx src/",
    "size-check": "size-limit",
    "quality-gate": "npm run lint && npm run structure-check && npm run dep-check && npm run circular-check",
    "storybook": "start-storybook -p 7007 --no-manager-cache",
    "build-storybook": "build-storybook",
    "db:genesis-wave": "GENESIS_WAVE=true node scripts/wipe-firestore-data.js --force",
    "backup": "bash scripts/backup-tag.sh",
    "release": "bash scripts/release.sh",
    "migrate:locations": "FIRESTORE_EMULATOR_HOST=localhost:8080 node src/scripts/migrateLocations.js",
    "prepare": "husky"
  },
