    "eslint-plugin-unused-imports": "^4.2.0",
    "firebase-admin": "^13.5.0",
    "husky": "^9.1.7",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.16",
    "lint-staged": "^16.1.6",
    "madge": "^8.0.0",
    "prettier": "^3.6.2",
    "react-native-web": "^0.21.0",
    "size-limit": "^11.2.0",
    "typescript": "~5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
